<div class="container">
  <h2>ユーザー一覧</h2>
  <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
    <div id="grid">
       <% @users.each do |user| %>
        <li class="userbox"><%= profile_img(user) %></li>
        <li class="userbox"><%= user.name %></li>
        <li class="userbox"><%= user.email %></li>
        <li class="userbox"><%= render partial: 'follow_form', locals: { user: user } if signed_in? %></li>

        <% if user.id != current_user.id %>
      <div class="item">
        <li class="userbox"><%= link_to 'やりとりしているメッセージ詳細', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%></li>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
