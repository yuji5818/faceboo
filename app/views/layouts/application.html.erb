<!DOCTYPE html>
<html>
<head>
  <title>Faceboo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <ul class="navbarleft">
        <li><%= link_to "faceboo", root_path %></li>
        <li><%= link_to "ニュースフィード", topics_path %></li>
        <li><%= link_to 'ユーザー一覧', users_path if user_signed_in? %></li>
          <%= link_to users_path do %>
            <i class="fa fa-envelope-o" aria-hidden="true"></i>
          <% end %>
    </ul>
    <ul class="navbarright">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
        <ul class="dropdown-menu">
        　　<% if user_signed_in? %>
          　　<li><%= link_to 'マイページ', edit_user_registration_path %></li>
          　　<li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
        　　<% else %>
          　　<li><%= link_to 'ログイン', new_user_session_path %></li>
          　　<li><%= link_to 'サインアップ', new_user_registration_path %></li>
        　　<% end %>
        </ul>
      </li>
    </ul>
  </header>

<%= yield %>

</body>
</html>
