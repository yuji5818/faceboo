<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h1>Topic一覧</h1>
      <%= link_to "Topicを作成する", new_topic_path, class: 'btn btn-default' %>

    <% @topics.each do |topic| %>
      <div class="row">
      <!-- <div class="profile_img"><%= profile_img(topic.user) %></div> -->
        <%= link_to topic_path(topic)%>

        <p><%= topic.content %></p>
        <%= link_to "編集", edit_topic_path(topic.id), data: { confirm: '本当に編集していいですか？' } ,class: 'btn btn-default btn-sm btn-success' %>
        <%= link_to "削除", topic_path(topic.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
        </div>
    <% end %>
  </div>
</div>
