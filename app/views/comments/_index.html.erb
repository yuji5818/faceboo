<ul>
  <% comments.each do |comment| %>
    <% unless comment.id.nil? %>
      <li class="comment_list<%= comment.id %>">
        <p class="left"><%= comment.user.name %>さんがコメントしました。</p>
        <p class="left"><%= comment.content %></p>
        <p>投稿日時：<%= comment.updated_at.strftime("%Y年%m月%d日 %H時 %M分") %></p>
        <% if current_user.id == comment.user.id %>
          <p class="right">
            <%= link_to '', edit_topic_comment_path(topic, comment), class: 'fa fa-pencil-square-o fa-lg comment', remote: true %>
            <%= link_to '', topic_comment_path(topic, comment), class: "fa fa-trash-o fa-lg", method: :delete, remote: true, data: { confirm: '本当に削除していいですか？' } %>
          </p>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
